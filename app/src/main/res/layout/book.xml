<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menuLayout"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bookImage"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop" />


            <RelativeLayout
                android:id="@+id/nameAuthorStars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookImage"
                android:layout_marginTop="10dp">


                <RelativeLayout
                    android:id="@+id/nameAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="50dp">


                    <TextView
                        android:id="@+id/tv_bookName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/sans_caption_bold"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_bookName"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/sans_caption_bold"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@color/black_60"
                        android:textSize="16dp" />
                </RelativeLayout>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameAuthor"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/blue"
                    android:progressTint="@color/yellow"
                    android:secondaryProgressTint="@color/yellow" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameAuthorStars"
                android:layout_marginTop="15dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <include
                        android:id="@+id/read_button"
                        layout="@layout/my_read_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <include
                        android:id="@+id/favourite_button"
                        layout="@layout/my_favourite_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/read_button" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bookInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttons"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp">

                <RelativeLayout
                    android:id="@+id/yearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_year"
                        style="@style/boldTextFontBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/year" />

                    <TextView
                        android:id="@+id/tv_yearInfo"
                        style="@style/regularTextFontBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_year" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/genreLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/yearLayout">

                    <TextView
                        android:id="@+id/tv_genre"
                        style="@style/boldTextFontBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/genre" />

                    <TextView
                        android:id="@+id/tv_genreInfo"
                        style="@style/regularTextFontBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_genre" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/annotationLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genreLayout"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_annotation"
                        style="@style/boldTextFontBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/annotation" />

                    <TextView
                        android:id="@+id/tv_annotationInfo"
                        style="@style/regularTextFontBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_annotation"
                        android:layout_alignParentStart="true"
                        android:layout_toRightOf="@id/tv_annotation" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/commentsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookInfoLayout"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp">

                <RelativeLayout
                    android:id="@+id/commentsNumberLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_commentsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/sans_caption_bold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_commentsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_commentsNumber"
                        android:fontFamily="@font/sans_caption_bold"
                        android:text="@string/comments_0"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/commentsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/commentsNumberLayout"
                    android:layout_marginTop="5dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:overScrollMode="never" />

                <RelativeLayout
                    android:id="@+id/leaveCommentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/commentsRecyclerView"
                    android:layout_marginTop="5dp">

                    <View
                        android:id="@+id/delimiter"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/black_40" />

                    <TextView
                        android:id="@+id/tv_leaveComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/delimiter"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/sans_caption_bold"
                        android:text="@string/leaveComment"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/leaveCommentInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_leaveComment"
                        android:layout_marginTop="10dp"
                        android:hint="@string/commentHint"
                        app:boxBackgroundColor="@color/blue_comment">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_leaveComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <FrameLayout
                        android:id="@+id/btn_sendCommentLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/leaveCommentInputLayout"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/tv_sendComment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/comment_rounded_button_ripple"

                            android:fontFamily="@font/sans_caption_regular"
                            android:paddingHorizontal="40dp"
                            android:paddingVertical="9dp"
                            android:text="@string/sendComment"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                    </FrameLayout>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/my_menu" />
    </FrameLayout>

</RelativeLayout>