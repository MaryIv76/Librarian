<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/oneHomePageBookLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="115dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookImage">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:fontFamily="@font/sans_caption_regular"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/author"
            android:textColor="@color/black_60"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_bookName"
            style="@style/regularTextFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_author"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:text="@string/author" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bookName">

            <TextView
                android:id="@+id/tv_rating"
                style="@style/regularTextFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/tv_rating"
                android:src="@drawable/star"
                app:tint="@color/black_80" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>