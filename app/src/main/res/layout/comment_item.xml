<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/oneLineCommentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <View
        android:id="@+id/delimiter"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/black_40" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/delimiter"
        android:layout_marginHorizontal="5dp">

        <TextView
            android:id="@+id/tv_commentUserName"
            style="@style/boldTextFontBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="Имя пользователя" />

        <TextView
            android:id="@+id/tv_commentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_commentUserName"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/sans_caption_regular"
            android:text="Дата"
            android:textColor="@color/black_80"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_comment"
            style="@style/regularTextFontBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_commentDate"
            android:layout_alignParentStart="true"
            android:text="комментарий комментарий комментарий" />
    </RelativeLayout>


</RelativeLayout>